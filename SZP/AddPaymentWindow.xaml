<Window x:Class="SZP.AddPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZP"
        mc:Ignorable="d"
        Title="AddPaymentWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Rodzaj płatności:"/>
            <TextBox x:Name="PaymentTypeTextBox" Margin="0 5"/>

            <Label Content="Kwota:"/>
            <TextBox x:Name="AmountTextBox" Margin="0 5"/>

            <Label Content="Data:"/>
            <DatePicker x:Name="DatePicker" Margin="0 5"/>

            <Button Content="Dodaj płatność" Click="AddPaymentButton_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>